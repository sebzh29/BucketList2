{% extends 'base.html.twig' %}
{% block stylesheets %} {% endblock %}

{% block title %}Home{% endblock %}


{% block body %}
    <div>

            <h2>Ma liste de souhaits</h2>
                <ul class="wishliste">
                    {%  for wish in wishes %}
                        <p>Mon souhait serait de <a href=" {{ path('app_details' ,{'id' : wish.id})  }}">{{ wish.title }}</a></p>

                    {% endfor %}
                </ul>

            <p>J'ai {{ wishesCount }} souhaits.</p>

    </div>


{% endblock %}
